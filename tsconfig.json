{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "skipLibCheck": true,
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@app/*": [ "app/*" ],
      "@core/*": [ "app/core/*" ],
      "@assets/*": [ "app/assets/*" ],
      "@store/*": [ "app/core/store/*" ],
      "@auth/*": [ "app/pages/auth/*" ],
      "@events/*": [ "app/pages/events/*" ],
      "@news/*": [ "app/pages/news/*" ],
      "@teams/*": [ "app/pages/teams/*" ],
      "@settings/*": [ "app/pages/settings/*" ],
      "@users/*": [ "app/pages/users/*" ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": true,
    "strictInjectionParameters": true,
    "strictMetadataEmit": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.fixtures.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}

