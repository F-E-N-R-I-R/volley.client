{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@app/*": [ "app/*" ],
      "@core/*": [ "app/core/*" ],
      "@assets/*": [ "app/assets/*" ],
      "@store/*": [ "app/core/store/*" ],
      "@auth/*": [ "app/auth/*" ],
      "@events/*": [ "app/events/*" ],
      "@news/*": [ "app/news/*" ],
      "@teams/*": [ "app/teams/*" ],
      "@settings/*": [ "app/settings/*" ],
      "@users/*": [ "app/users/*" ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
